<!-- Bootstrap + FontAwesome + Custom CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/css/admin.css">

<div class="container bg-white p-4 mb-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="banner d-flex align-items-center rounded-3">
        <h3 class="text-white px-3 fw-bold">Student <i class="fa-solid fa-chevron-right fw-bold"></i> Profile </h3>
        <div class="stripes"></div>
      </div>
    </div>
  </div>

  <div class="profile-container">
    <div class="card profile-card">
      <div class="card-body">
        <form action="/admin/save_profile" method="post" enctype="multipart/form-data">
          <input type="hidden" name="admin_id" value="<%= admin.admin_id %>" >

          <div class="row mb-4">
            <!-- Profile Photo -->
            <div class="col-md-3 profile-photo-container text-center">
              <img src="/upload/<%= admin.admin_image %>" 
                   class="profile-photo-preview rounded-circle mb-2" 
                   id="photoPreview" 
                   style="width:150px; height:150px; object-fit:cover;">
              
              <label for="admin_image" class="btn btn-outline-primary btn-sm mt-2">
                <i class="fas fa-camera me-2"></i> Change Photo
              </label>
              <input type="file" name="admin_image" id="admin_image" class="d-none" accept="image/*">
            </div>

            <!-- Profile Details -->
            <div class="col-md-9">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="admin_name" class="form-label">Full Name</label>
                  <input type="text" name="admin_name" id="admin_name" class="form-control" 
                         value="<%= admin.admin_name %>" required>
                </div>

                <div class="col-md-6 mb-3">
                  <label for="admin_email" class="form-label">Email Address</label>
                  <input type="email" name="admin_email" id="admin_email" class="form-control" 
                         value="<%= admin.admin_email %>" required>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="admin_mobile" class="form-label">Mobile Number</label>
                  <input type="tel" name="admin_mobile" id="admin_mobile" class="form-control" 
                         value="<%= admin.admin_mobile %>" required>
                </div>

                <div class="col-md-6 mb-3">
                  <label for="admin_password" class="form-label">Password</label>
                  <input type="password" name="admin_password" id="admin_password" class="form-control" 
                         value="<%= admin.admin_password %>" required>
                </div>
              </div>
            </div>
          </div>

          <!-- Submit -->
          <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-2"></i> Update Profile
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->

<script>
  // âœ… Fix: Correct input ID (was student_photo, should be admin_image)
  document.getElementById('admin_image').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(event) {
        document.getElementById('photoPreview').src = event.target.result;
      };
      reader.readAsDataURL(file);
    }
  });
</script>

