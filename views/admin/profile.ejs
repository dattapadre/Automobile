<%- include('navbar.ejs') %>

<!-- Profile Card in Container (80% width, centered) -->
<div class="container d-flex justify-content-center align-items-center vh-100 bg-body-tertiary" style="width: 80%;">
  <div class="card shadow-lg border-0 rounded-4 p-4 w-100" style="max-width: 400px;">
    <div class="card-body text-center">
      <h4 class="card-title text-primary fw-semibold fs-4 mb-1"><%- result[0].name %></h4>
      <p class="text-muted fw-normal fs-6 mb-2">
        <i class="bi bi-envelope-fill me-1"></i><%- result[0].email %>
      </p>
      <hr class="my-3">
      <p class="text-secondary fw-light fs-6 mb-4 px-2">
        Passionate coder focused on building modern, responsive, and user-friendly web applications using MERN stack.
      </p>
      <a href="#" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-medium fs-6">
        <i class="bi bi-telephone-fill me-1"></i><%- result[0].mobile_no %>
      </a>
    </div>
  </div>
</div>

<%- include('footer.ejs') %>
