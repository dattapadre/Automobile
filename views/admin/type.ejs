 <%-include('navbar.ejs')%>
 <div class="container p-5">
        <div class="row">
            <div class="col-md-12 shadow-lg p-3">
                <form action="/admin/save_type" method="post" enctype="multipart/form-data">
                <div class="row ">
                    <h3 class="mb-3">Add Menu</h3>
                    <div class="col-md-12">
                        <label class="form-label" for="name">Menu Type</label>
                        <input type="text" name="typename" class="form-control" required>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-md-12">
                        <button class="btn btn-primary text-center ps-3 ">Save</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>


<div class="container my-5 p-5">
  <h2 class="mb-4 text-center">Categories List</h2>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">Sr No</th>
          <th scope="col">Category Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0;i<result.length;i++){%>
        <tr>
          <td><%- i + 1 %></td>
          <td><%-result[i].type_name%></td>
          <td class="d-block justify-content-center text-center">
            <a href="/admin/edit_type/<%-result[i].type_id%>">
            <button class="btn btn-sm ps-2 btn-outline-primary me-1">Edit</button>
            </a>
            <a href="/admin/delete_type/<%-result[i].type_id%>"> 
            <button class="btn btn-sm btn-outline-danger">Delete</button>
            </a>
          </td>
        </tr>
       <%}%>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

