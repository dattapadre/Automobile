<%-include('navbar.ejs')%>

<!-- Dashboard Content -->
<div class="container-fluid ">
  <h4 class="mb-4">Dashboard Overview</h4>
  <div class="row p-4">
    <!-- Stat Cards -->
    <div class="col-md-6   col-lg-3">
      <div class="card stat-card text-center">
        <div class="card-body">
          <div class="icon-container"><i class="fas fa-receipt"></i></div>
          <h6 class="text-muted mb-1">Pending's Orders</h6>
          <h4><%-order[0].pending_order%></h4>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3 text-center">
      <div class="card stat-card">
        <div class="card-body">
          <div class="icon-container"><i class="fas fa-dollar-sign"></i></div>
          <h6 class="text-muted mb-1">Table</h6>
          <h4><%-table[0].total_table%></h4>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3 text-center">
      <div class="card stat-card">
        <div class="card-body">
          <div class="icon-container"><i class="fas fa-users"></i></div>
          <h6 class="text-muted mb-1">Categories</h6>
          <h4><%-type[0].type%></h4>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3 text-center">
      <div class="card stat-card">
        <div class="card-body">
          <div class="icon-container"><i class="fas fa-utensils"></i></div>
          <h6 class="text-muted mb-1">Menu Items</h6>
          <h4><%-sum[0].total_items%></h4>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5 p-4">
  <div class="row g-4">
   <% for(var i = 0; i < result.length; i++) { %>
  <div class="col-md-6 col-lg-3">
    <div class="card shadow-sm border-0 rounded-4 text-white" style="background-color: #10489cc0;">
      <div class="card-body text-center">
        <div class="bg-white text-danger rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px;">
          <i class="fas fa-plus fs-4"></i>
        </div>
        <h6 class="text-light mb-1"><%- result[i].table_name %></h6>

        <h4 class="fw-bold mb-2">
          <% if (!result[i].activeOrder) { %>
            <!-- No pending order -->
            <a href="/menu_list/<%- result[i].tabel_id %>">
              <button class="btn btn-danger fw-bold mt-4">Add Order</button>
            </a>
          <% } else { %>
            <!-- Pending order exists -->
            <a href="/admin/pay_order/<%- result[i].tabel_id %>">
              <button class="btn btn-success fw-bold mt-4 text-white">Pay Bill</button>
            </a>
            
          <% } %>
        </h4>

      </div>
    </div>
  </div>
<% } %>

  </div>
</div>




<%-include('footer.ejs')%>