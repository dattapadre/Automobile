<%- include("navbar.ejs") %>

<div class="container mt-4 p-5 pt-2">
    <div class="card shadow-lg border-1">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle"></i> Welcome To Slider
            </h4>
        </div>
        <div class="card-body bg-light">
            <form action="/admin/slider" method="POST" enctype="multipart/form-data">
                <div class="row g-3">
                    
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Slider Name</label>
                        <input type="title" name="title" class="form-control" placeholder="Enter slider name" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Image</label>
                        <input type="file" name="image" class="form-control" accept="image/*" required>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold">Slider Description</label>
                        <textarea name="description" class="form-control" id="editor" placeholder="Enter Slider Description" rows="4" ></textarea>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-save"></i> Save Slider
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="table-responsive">
        <h1 class="text-center m-5">Slider List</h1>
        <table class="table table-bordered table-hover table-striped table-sm  ">
            <tr class="table-success fs-6 fw-bold">
                <th class="fs-6 text-center fw-bold">Action</th>
                <th class="fs-6 text-center fw-bold">Sr No</th>
                <th class="fs-6 text-center fw-bold">Brand Name</th>
                <th class="fs-6 text-center fw-bold">Brand Description</th>
                <th class="fs-6 text-center fw-bold">Brand Image</th>
            </tr>
            <% for(var i=0;i<data.length;i++){%>
                <tr>
                    <td class="fs-6  text-center fw-bold">
                        <a href="/admin/edit_slider/<%-data[i].id%>" class="btn btn-outline-primary btn-sm me-2 shadow-sm mt-4" title="Edit">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="/admin/delete/<%-data[i].id%>" class="btn btn-outline-danger btn-sm shadow-sm mt-4" title="Delete">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                    <td class="fs-6 text-center fw-bold"><%- i+1 %></td>
                    <td class="fs-6 text-center fw-bold"><%-data[i].name%></td>
                    <td class="fs-6 text-center fw-bold"><%-data[i].description%></td>

                    <td>
                        <img src="/home/<%-data[i].image%>" width="100px" height="100px" class="rounded shadow">
                    </td>
                </tr>
                <%}%>
        </table>
<%- include("footer.ejs") %>
