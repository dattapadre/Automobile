<%- include("navbar.ejs") %>

<div class="container mt-4 p-5 pt-2">
    <div class="card shadow-lg border-1">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle"></i> Welcome To Edit
            </h4>
        </div>
        <div class="card-body bg-light">
            <form action="/admin/edit_slider/<%= slider.id %>" method="POST" enctype="multipart/form-data">

                <div class="row g-3">
                    
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Edit Slider Name</label>
                        <input type="title" name="title" class="form-control" placeholder="Enter slider name" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Edit Image</label>
                        <input type="file" name="image" class="form-control" accept="image/*" required>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold">Edit Slider Description</label>
                        <textarea name="description" class="form-control" id="editor" placeholder="Enter Slider Description" rows="4" ></textarea>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-save"></i> Update Slider
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

