  <!-- Order Table -->
  <div class="container">
    <h2 class="mb-4 text-center">Order System</h2>

    <div class="table-responsive shadow rounded">
      <table class="table table-bordered table-hover align-middle mb-0">
        <thead class="table-dark text-center">
          <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Payment method</th>
            <th>Address</th>
            <th>Total Price</th>
            <th>Order Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% for(var i=0;i<result.length;i++){%>
          <tr>
            <td><%- i+ 1 %></td>
            <td><%= result[i].order_date.toISOString().slice(0,10) %></td>
            <td><%-result[i].payment_status%></td>
            <td><%-result[i].area%>,<%-result[i].city %> ,<%-result[i].state %> <%-result[i].pincode %></td>
            <td><%-result[i].total_amount %> </td>
            <td><%-result[i].order_status%></td>
            <td>
             <a href="/admin/order_details/<%-result[i].order_id %>"><button class="btn btn-sm btn-success">View</button></a> 
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>

