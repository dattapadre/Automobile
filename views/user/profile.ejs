<%- include("navbar.ejs") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center">
          <h3>User Profile</h3>
        </div>

        <div class="card-body text-center">
          <!-- Profile Image -->
          <div class="mb-3">
            <img src="/upload/<%-result[0].image%>"
                 alt="Profile" width="120" class="rounded-circle border p-2">
          </div>

          <!-- User Information -->
          <h4 class="mb-1 text-start">Name :- <%= result[0].name %></h4>
          <h5 class="m-3 text-start">Mobile:- <%= result[0].mobile %></h5>
          <h4 class="mb-1 text-start">Email :- <%= result[0].email %></h4>

          <hr>

         

          <!-- Buttons -->
          <a href="/logout" class="btn btn-success mt-3 float-end">Update Profile</a>
          <a href="/logout" class="btn btn-danger m-3 float-end">Logout</a>
        </div>
      </div>

    </div>
  </div>
</div>
