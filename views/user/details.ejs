<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5" data-table-id="<%= table_id %>">

  <h3 class="mb-4">Product Details</h3>

  <form action="/confirm_order" method="POST">
    <input type="hidden" name="table_id" value="<%= table_id %>">

    <div class="table-responsive">
      <table class="table table-bordered align-middle text-center table-hover ">
        <thead class="table-dark">
          <tr>
            <th>Sr. No</th>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% 
            let grandTotal = 0;
            for(let i = 0; i < result.length; i++) { 
              const total = result[i].menu_price * result[i].qty;
              grandTotal += total;
          %>
            <tr>
              <td><%= i + 1 %></td>
              <td><img src="/images/<%= result[i].menu_image %>" width="150px"></td>
              <td><%= result[i].menu_name %></td>
              <td>₹<%= result[i].menu_price %></td>
              <td><%= result[i].qty %></td>
              <td>₹<%= total %></td>

              <!-- hidden inputs -->
              <input type="hidden" name="products[<%= i %>][product_id]" value="<%= result[i].product_id%>">
              <input type="hidden" name="products[<%= i %>][qty]" value="<%= result[i].qty %>">
              <input type="hidden" name="products[<%= i %>][price]" value="<%= result[i].menu_price %>">
              <input type="hidden" name="products[<%= i %>][total]" value="<%= total %>">
          <% } %>
        </tbody>
        <tfoot>
          <tr class="table-danger fw-bold">
            <td colspan="5" class="text-end">All Total</td>
            <td>₹<%= grandTotal %></td>
            <input type="hidden" name="grand_total" value="<%= grandTotal %>">
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-4">
      <button type="submit" class="btn btn-success">Confirm Order</button>
      <a href="/menu_list/<%= table_id %>" class="btn btn-warning">Update Order</a>
    </div>
  </form>

</body>
</html>
