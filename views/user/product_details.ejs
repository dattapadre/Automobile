<%- include('navbar.ejs') %>

  <!--------------------- AOS CSS--------------- -->
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <!-------------------------- Bootstrap CSS ------------------------------->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-------------------------- Custom CSS ------------------------------->
  <link rel="stylesheet" type="text/css" href="css/product.css">

  <br>
  <div class="container-fluid">
    <div class="row">

      <!-- Sidebar: Brand -->
      <div class="col-lg-3 col-md-4 col-sm-12" data-aos="fade-right">
        <div class="sidebar">
          <h5>BRAND</h5>
          <ul>
            <% for(var i=0;i<categories.length;i++){ %>
              <li><a href="<%-categories[i].vehicle_id%>"><%-categories[i].vehicle_name%></a></li>
              <% } %>
          </ul>
          <button class="btn btn-dark w-100">Apply Filters</button>
        </div>

        <!-- Sidebar: Price Range -->
        <div class="sidebar">
          <h5>Price Range</h5>
          <div class="mb-3">
            <input type="range" class="form-range" min="0" max="6000" step="500">
            <div class="d-flex justify-content-between">
              <span>â‚¹0</span>
              <span>â‚¹6000</span>
            </div>
          </div>
          <button class="btn btn-dark w-100">Apply Filters</button>
        </div>
      </div>

      <!-- Main Content -->
      <div class="col-lg-9 col-md-8 col-sm-12">
        <div class="filter-controls" data-aos="fade-down">
          <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <h4 class="section-title mb-0">Seat Pockets</h4>
          </div>
        </div>

        <!-- Product Grid -->
        <div class="row">
          <% if(result.length> 0){ %>
            <% for(var i=0; i<result.length; i++){ %>
              <div class="col-md-4 col-sm-6 col-12 mb-4" data-aos="zoom-in" data-aos-delay="100">
                <div class="product-card">
                  <img src="/product/<%-result[i].product_image%>" alt="Seat Pocket" class="product-img">
                  <a href="/product_details/<%-result[i].product_id%>">
                    <div class="product-body">
                      <div class="product-title"><%- (result[i].product_name || "").split(/\s+/).slice(0,5).join(" ") %> ...</div>


                  <div class=" product-price">
                          <span class="old-price">â‚¹<%-result[i].product_market_price%></span>
                          <span class="new-price">â‚¹<%-result[i].product_price%></span>
                      </div>
                  </a>
                  <!-- <%if(is_login){%> -->
                    
                  <!-- <%}%> -->
                  <button class="btn btn-primary btn-add-to-cart mt-2" 
                    onclick="add_to_cart('<%-result[i].product_id%>')">
                    ADD TO CART
                  </button>
                </div>
              </div>
        </div>
        <% } %>
          <% } else { %>
            <div class="card text-center shadow-sm p-4" style="max-width: 350px; margin-left: 300px;">
              <div class="mb-3">
                <div class="bg-danger rounded-circle d-flex justify-content-center align-items-center mx-auto"
                  style="width:60px; height:60px;">
                  <span class="text-white fs-3">&times;</span>
                </div>
              </div>
              <h5 class="text-danger fw-bold">No Products Available</h5>
              <p class="text-muted mb-4">Weâ€™re sorry, but there are currently no products to display. Please check back
                later!</p>
              <a href="/" class="btn btn-success">
                &larr; Back to Home
              </a>
            </div>
            <% } %>
      </div>
    </div>
  </div>
  </div>

  <!-- Offcanvas Cart -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Your Cart ðŸ›’</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <ul class="list-group" id="cart-items">
        <!-- Products will appear here -->
      </ul>
      <hr>
      <h6>Total: â‚¹<span id="cart-total">0</span></h6>
      <button class="btn btn-success mt-2 w-100">Checkout</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 800, once: true });
  </script>
  

  <script>
  function add_to_cart(id){
    console.log(id)
    var url =`/add_to_cart/${id}?qty=1`
    location.href = url
  }
</script>

  <%- include('footer.ejs') %>