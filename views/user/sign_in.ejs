<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shree Hari Automobile - Sign Up</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #dc3545;
      --primary-dark: #c82333;
      --secondary: #212529;
      --light: #f8f9fa;
    }
    
    body {
      min-height: 100vh;
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                  url('https://images.unsplash.com/photo-1493238792000-8113da705763?ixlib=rb-4.0.3&auto=format&fit=crop&w=1500&q=80') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: "Segoe UI", sans-serif;
      padding: 20px;
    }

    .brand-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .brand-logo {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .brand-logo i {
      font-size: 2.5rem;
      color: white;
    }

    .brand-name {
      font-weight: 700;
      font-size: 1.8rem;
      color: white;
      letter-spacing: 0.5px;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

    .brand-tagline {
      font-size: 0.9rem;
      color: var(--light);
      margin-top: 0.3rem;
    }

    .form-container {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.3);
      overflow: hidden;
      width: 100%;
      max-width: 800px;
    }

    .form-header {
      background: var(--primary);
      color: white;
      text-align: center;
      padding: 1.2rem;
      font-weight: 600;
    }

    .form-body {
      padding: 2rem;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #ced4da;
      padding: 10px 14px;
      transition: all 0.3s;
    }

    .form-control:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.15);
    }

    .input-group-text {
      background: transparent;
      border-radius: 8px 0 0 8px;
    }

    .btn-custom {
      background: var(--primary);
      border: none;
      color: white;
      border-radius: 8px;
      padding: 12px;
      font-weight: 500;
      transition: 0.3s;
    }

    .btn-custom:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
    }

    .form-footer {
      text-align: center;
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e9ecef;
    }

    .form-footer a {
      text-decoration: none;
      font-weight: 500;
      color: var(--primary);
    }

    .form-footer a:hover {
      text-decoration: underline;
    }

    .divider {
      display: flex;
      align-items: center;
      margin: 1.5rem 0;
    }

    .divider::before, .divider::after {
      content: "";
      flex: 1;
      border-bottom: 1px solid #dee2e6;
    }

    .divider span {
      padding: 0 1rem;
      color: #6c757d;
      font-size: 0.85rem;
    }

    .social-login {
      display: flex;
      gap: 12px;
      margin-bottom: 1.5rem;
    }

    .social-btn {
      flex: 1;
      padding: 10px;
      border-radius: 8px;
      text-align: center;
      font-size: 1.2rem;
      color: white;
      transition: 0.3s;
    }

    .social-btn:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

    .facebook {
      background: #3b5998;
    }

    .google {
      background: #db4a39;
    }

    .terms-text {
      font-size: 0.85rem;
      color: #6c757d;
      text-align: center;
      margin-top: 1rem;
    }
    
    .password-strength {
      height: 5px;
      margin-top: 5px;
      border-radius: 5px;
      background: #eee;
      overflow: hidden;
    }
    
    .strength-meter {
      height: 100%;
      width: 0;
      transition: width 0.3s;
      border-radius: 5px;
    }
    
    .form-check-input:checked {
      background-color: var(--primary);
      border-color: var(--primary);
    }

    
    /* Modal Styling */
    .modal-content {
      border-radius: 12px;
      box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.3);
      border: none;
    }

    .modal-header {
      background: var(--primary);
      color: white;
      border-radius: 12px 12px 0 0;
      padding: 1.2rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-close {
      filter: invert(1);
    }

    .modal-body {
      padding: 2rem;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #ced4da;
      padding: 10px 14px;
      transition: all 0.3s;
    }

    .form-control:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.15);
    }

    .input-group-text {
      background: transparent;
      border-radius: 8px 0 0 8px;
    }

    .btn-modal {
      background: var(--primary);
      border: none;
      color: white;
      border-radius: 8px;
      padding: 12px;
      font-weight: 500;
      transition: 0.3s;
      width: 100%;
    }

    .btn-modal:hover {
      background: var(--primary-dark);
    }

    .form-footer {
      text-align: center;
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e9ecef;
    }

    .form-footer a {
      text-decoration: none;
      font-weight: 500;
      color: var(--primary);
    }

    .form-footer a:hover {
      text-decoration: underline;
    }

    .divider {
      display: flex;
      align-items: center;
      margin: 1.5rem 0;
    }

    .divider::before, .divider::after {
      content: "";
      flex: 1;
      border-bottom: 1px solid #dee2e6;
    }

    .divider span {
      padding: 0 1rem;
      color: #6c757d;
      font-size: 0.85rem;
    }

    .social-login {
      display: flex;
      gap: 12px;
      margin-bottom: 1.5rem;
    }

    .social-btn {
      flex: 1;
      padding: 10px;
      border-radius: 8px;
      text-align: center;
      font-size: 1rem;
      color: white;
      transition: 0.3s;
    }

    .social-btn:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

    .facebook {
      background: #3b5998;
    }

    .google {
      background: #db4a39;
    }

    .forgot-password {
      display: block;
      text-align: right;
      font-size: 0.9rem;
      margin-top: -10px;
      margin-bottom: 1rem;
    }
    
    .form-check-input:checked {
      background-color: var(--primary);
      border-color: var(--primary);
    }
  </style>
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      
      <!-- Sign Up Form -->
      <div class="col-md-12 col-lg-6">
        <div class="brand-header">
          <div class="brand-logo">
            <i class="fas fa-car"></i>
          </div>
          <div class="brand-name">Shree Hari Automobile</div>
        </div>
        
        <div class="form-container">
          <div class="form-header">Create Your Account</div>
          <div class="form-body">
            <form>
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <div class="input-group">
                      <span class="input-group-text"><i class="fas fa-user"></i></span>
                      <input type="text" class="form-control" id="firstName" placeholder="Enter your first name" name="name">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="mobile" class="form-label">Mobile Number</label>
                    <div class="input-group">
                      <span class="input-group-text"><i class="fas fa-user"></i></span>
                      <input type="text" class="form-control" id="mobile" placeholder="Enter your last name" name="mobile">
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  <input type="email" class="form-control" id="email" placeholder="your.email@example.com" name="email">
                </div>
              </div>
              
              <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-phone"></i></span>
                  <input type="file" class="form-control" id="phone" placeholder="Enter your Photo " name="image">
                </div>
              </div>
              
              <button type="submit" class="btn btn-custom w-100">Create Account</button>
              
            </form>
            <div class="form-footer mt-2">
              Already have an account? <a href data-bs-toggle="modal" data-bs-target="#loginModal">Sign in here</a>
            </div>
          </div>
        </div>
        
        <div class="terms-text">
          By creating an account, you agree to our Terms of Service and Privacy Policy
        </div>
      </div>

    </div>
  </div>

  <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="loginModalLabel"><i class="fas fa-sign-in-alt me-2"></i> Member Login</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="loginEmail" class="form-label">Email Address</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <input type="email" class="form-control" id="loginEmail" placeholder="your.email@example.com">
              </div>
            </div>
            <div class="mb-3">
              <label for="loginPassword" class="form-label">Password</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" class="form-control" id="loginPassword" placeholder="Enter your password">
              </div>
              <a href="#" class="forgot-password">Forgot Password?</a>
            </div>
            <button type="submit" class="btn btn-modal">Sign In</button>
            
            <div class="divider">
              <span>Or continue with</span>
            </div>
            
            
          </form>
          <div class="form-footer">
            Don't have an account? <a href="/signup">Register here</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Password strength indicator
    document.getElementById('password').addEventListener('input', function() {
      const password = this.value;
      const strengthMeter = document.getElementById('passwordStrength');
      let strength = 0;
      
      if (password.length >= 8) strength += 25;
      if (/[A-Z]/.test(password)) strength += 25;
      if (/[0-9]/.test(password)) strength += 25;
      if (/[^A-Za-z0-9]/.test(password)) strength += 25;
      
      strengthMeter.style.width = strength + '%';
      
      if (strength < 50) {
        strengthMeter.style.backgroundColor = '#dc3545';
      } else if (strength < 75) {
        strengthMeter.style.backgroundColor = '#ffc107';
      } else {
        strengthMeter.style.backgroundColor = '#28a745';
      }
    });
  </script>
</body>
