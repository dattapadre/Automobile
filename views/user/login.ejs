<%-include('navbar.ejs')%>
<body>
    
<div class="d-flex flex-column min-vh-100 mt-5">
  
  <!-- Main content: center login card -->
  <div class="d-flex justify-content-center align-items-center flex-grow-1">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
      <div class="card-body">
        <h3 class="card-title bg-danger p-3 rounded text-center mb-4">
          <i class="fas fa-sign-in-alt me-2"></i>Member Login
        </h3>
        <form action="/login" method="post">
          <div class="mb-3">
            <label for="loginEmail" class="form-label">Email Address</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" id="loginEmail" name="email" placeholder="your.email@example.com" required>
            </div>
          </div>

          <div class="mb-3">
            <label for="loginPassword" class="form-label">Mobile Number</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <input type="number" class="form-control" id="loginPassword" name="number" placeholder="Enter your password" required>
            </div>
            <div class="text-end mt-1">
              <a href="#" class="small text-decoration-none">Forgot Password?</a>
            </div>
          </div>

          <button type="submit" class="btn btn-primary w-100 mb-3 p-3 h3">Sign In</button>
        </form>

        <div class="text-center mt-4">
          Don't have an account? <a href="/signup" class="text-decoration-none">Register here</a>
        </div>
      </div>
    </div>
  </div>

  <%-include('footer.ejs')%>
</div>
